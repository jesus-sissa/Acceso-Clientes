<%@ Page Language="vb" AutoEventWireup="false" Theme="NegroAmarillo" MasterPageFile="~/MasterPage.Master" CodeBehind="SolicitudMateriales.aspx.vb" Inherits="SissaPortal.SolicitudMateriales" %>   
<%@ Register Assembly="AjaxControlToolkit" Namespace="AjaxControlToolkit" TagPrefix="asp" %>
<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <script type="text/javascript">
        function fn_ValidarCampos() {
            var txt_Fecha = document.getElementById('ctl00_ContentPlaceHolder1_txt_Fecha');
            var ddl_Material = document.getElementById('ctl00_ContentPlaceHolder1_ddl_Material');
            var txt_Cantidad = document.getElementById('ctl00_ContentPlaceHolder1_txt_Cantidad');

            if (txt_Fecha.value == '') {
                alert('Debe seleccionar una fecha de entrega.');
                return false;
            }

            if (ddl_Material.value == '') {
                alert('Debe seleccionar un material');
                return false;
            }
            
            if(txt_Cantidad.value == '')
            {
                alert('Debe seleccionar una cantidad');
                return false;
            }
            
        }
    </script>
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
    <fieldset>
        
        <table>
            <tr>
                <td align="right">
                    Fecha Solicitada de Entrega:
                </td>
                <td>
                    <asp:TextBox ID="txt_Fecha" runat="server" CssClass="txt_Fecha" />
                    <asp:CalendarExtender ID="txt_Fecha_CalendarExtender" runat="server" Enabled="True"
                        TargetControlID="txt_Fecha" Format="dd/MM/yyyy">
                    </asp:CalendarExtender>
                </td>
                <td align="right">
                    Material:
                </td>
                <td>
                    <asp:DropDownList ID="ddl_Material" runat="server" DataTextField="Descripcion" 
                        DataValueField="Id_Inventario">
                    </asp:DropDownList>
                </td>
            </tr>
            <tr>
                <td align="right">
                    Cantidad:
                </td>
                <td>
                    <asp:TextBox ID="txt_Cantidad" runat="server" Width="69px" />
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    <asp:Button ID="btn_Agregar" runat="server" Text="Agregar" OnClientClick="return fn_ValidarCampos();" />
                </td>
            </tr>
        </table>
        <asp:GridView ID="gv_Materiales" runat="server" CellPadding="10" ForeColor="#333333"
            GridLines="Horizontal" BorderWidth="3px" AutoGenerateColumns="False" CssClass="gridSISSA"
            AllowPaging="True" CellSpacing="1" Width="100%" 
            AutoGenerateDeleteButton="True" DataKeyNames="Id_Inventario">
            
            <RowStyle BackColor="White" ForeColor="#333333" />
            <Columns>
                <asp:BoundField DataField="Material" HeaderText="Material" >
                    <HeaderStyle HorizontalAlign="Center" />
                    <ItemStyle HorizontalAlign="Center" />
                </asp:BoundField>   
                <asp:BoundField DataField="Cantidad" HeaderText="Cantidad" >
                    <HeaderStyle HorizontalAlign="Right" />
                    <ItemStyle HorizontalAlign="Right" />
                </asp:BoundField>
            </Columns>
            <FooterStyle BackColor="White" ForeColor="Black" Font-Underline="False" />
            <PagerStyle BackColor="Black" ForeColor="White" HorizontalAlign="Center" 
            CssClass="futerPaje" Font-Underline="False" />
            <SelectedRowStyle BackColor="#D8A42C" Font-Bold="True" ForeColor="White" />
            <HeaderStyle BackColor="Black" ForeColor="White" HorizontalAlign="Left" />
        </asp:GridView>
        <asp:Button ID="btn_Guardar" runat="server" Text="Guardar" />
    </fieldset> 
</asp:Content>
